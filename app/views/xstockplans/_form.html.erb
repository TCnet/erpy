<%= form_for(@xstockplan,html: {class: "row g-2"}) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<%= f.label :name %>
<%= f.text_field :name, class: 'form-control' %>
<% @xstockplan.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
<%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
