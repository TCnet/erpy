<% provide(:title, "Forgot password") %>
  <h1>Forgot password</h1>
  <div class="row">
    <div class="col"></div>
    <div class="col-md-6 ">
      <%= form_for(:password_reset, url: password_resets_path, html: {class: "row g-2"}) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col"></div>
</div>
