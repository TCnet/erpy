<% provide(:title, 'My Amagroups') %>

  <div class="row">
    <aside class="col-md-3 albums_menu">
      <%= render 'shared/etemplate_menu' %>
    </aside>
    <div class="col-md-9">

      <div class="row templates">
        <table class="table">
          <thead>
            <tr>
              <th scope="col" class="col-sm-2">Name</th>
              <th scope="col" class="col-sm-6">包含属性</th>
              <th scope="col" class="col-sm-2" >当前使用</th>
              <th scope="col" class="col-sm-2">操作</th>

            </tr>
          </thead>

          <% @amagroups.each do |ob| %>
            <tr>
              <td >
                <%= link_to ob.name, ob %>

              </td>
              <td >
                <p style="width:500px;word-wrap:break-word;"><%= (ob.amatemps.map{|mapap| mapap.name }).join(",") %></p>
              </td>
              <td >
                <%= ob.isused %>
              </td>
              <td >
                <%= link_to "edit",edit_amagroup_path(ob) %>
                ｜
                <%= link_to "delete", ob, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

              </td>

            </tr>

          <% end %>

        </table>
      </div>

      <%= will_paginate %>
    </div>

  </div>
