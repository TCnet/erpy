<% provide(:title, 'My Amagroups') %>

  <div class="row">
    <aside class="col-md-3 albums_menu">
      <%= render 'shared/etemplate_menu' %>
    </aside>
    <div class="col-md-9">

      <div class="row templates">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">包含属性</th>
              <th scope="col">使用</th>
              <th scope="col">edit</th>
              <th scope="col">删除</th>
            </tr>
          </thead>

          <% @amagroups.each do |ob| %>
            <tr>
              <td>
                <%= link_to ob.name, ob %>

              </td>
              <td>
                <%= (ob.amatemps.map{|mapap| mapap.name }).join(",") %>
              </td>
              <td>
                <%= ob.isused %>
              </td>
              <td>
                <%= link_to "edit",edit_amagroup_path(ob) %>
              </td>
              <td>
                <%= link_to "delete", ob, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
              </td>
            </tr>

          <% end %>

        </table>
      </div>

      <%= will_paginate %>
    </div>

  </div>
