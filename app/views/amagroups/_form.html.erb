<%= form_with model: @amagroup,class: "row g-2" do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<div class="">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
</div>
<div class="">
  <%= f.label :remark %>
  <%= f.text_area :remark, class: 'form-control',rows: 6,placeholder: "remark" %>
</div>

<div class="">
  <%= f.check_box :isused ,class: "form-check-input"%>
  <%= f.label :isused,"是否当前使用(表示相册编辑导出使用该组)" ,class: "form-check-label"%>

</div>
<div class="row mt-3">
  <label for="">请选择需要添加到组的属性</label>
</div>
<div class="row my-2 ">
  <% @amatemps.each_with_index do |amatemp,num|%>
    <% if(num%3==0) %>
    </div>
    <div class="row my-2 ">
    <%end%>
    <div class="col-4">
      <%= check_box_tag("amatemp["+amatemp.id.to_s+"]",amatemp.id,getamagcheck(amatemp,@amagroup)) %>
      <%s =(amatemp.amagroups.map {|mapag| mapag.name}).join(',')%>
      <%s = s.blank? ? "" : "("+s+")"%>
      <%= label_tag (amatemp.name+s) %>
        </div>
      <%end%>
    </div>
<br/>
<div class="col-auto">
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
</div>

<% end %>
