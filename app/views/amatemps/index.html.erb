<% provide(:title, 'My Amatemps') %>

  <div class="row">
    <aside class="col-md-3 albums_menu">
      <%= render 'shared/etemplate_menu' %>
    </aside>
    <div class="col-md-9">

      <div class="row templates">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Name</th>
                <th scope="col" class="col-sm-5">group</th>
              <th scope="col">IsUsed</th>
              <th scope="col">Options</th>
            </tr>
          </thead>

          <% @amatemps.each do |ob| %>
            <tr>
              <td>
                <%= link_to ob.name, ob %>
              </td>
              <td>
                <%=(ob.amagroups.map {|mapag| mapag.name}).join(',') %>
              </td>
              <td>

                <%= ob.isused %>

              </td>
              <td>
                <p>
                  <%= link_to "edit",edit_amatemp_path(ob) %>
                  |
                  <%= link_to "delete", ob, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
                </p>
              </td>
            </tr>

          <% end %>

        </table>
      </div>

      <%= will_paginate %>
    </div>

  </div>
