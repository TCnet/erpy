<% provide(:title, 'My keywords') %>

  <div class="row">
    <aside class="col-md-3 albums_menu">
      <%= render 'shared/kword_menu' %>
    </aside>
    <div class="col-md-9">

      <%= render 'search' %>

      <div class="">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Name</th>
              
                <th scope="col">Options</th>
            </tr>
          </thead>

          <% @kwords.each do |kword| %>
            <tr>
              <td>
                <%= link_to kword.name, kword %>

              </td>
              <td>
                <p>
                  <%= link_to "edit",edit_kword_path(kword) %>
                  |
                  <%= link_to "delete", kword, method: :delete, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"} %>
                </p>
              </td>
            </tr>

          <% end %>

        </table>
      </div>

      <%= will_paginate %>
    </div>

  </div>
